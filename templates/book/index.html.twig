{% extends 'base.html.twig' %}

{% block title %}Գրքեր{% endblock %}

{% block body %}
    <style>
        .card {
            margin: 15px 0; /* Add vertical margin for spacing between cards */
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .card-title {
            font-size: 1.25rem;
        }
        .pagination {
            justify-content: center;
        }
    </style>

    <div class="container mt-5">
        <h1 class="text-center">Վաճառքի Գրքեր</h1>
        <div class="row">
            {% for book in books %}
                <div class="col-md-3"></div>
                <div class="col-md-7">
                    <div class="card">
                        <h5 class="card-title text-center">{{ book.title }}</h5>
                        <p class="card-text text-center"><strong>Գինը:</strong> ${{ book.price }}</p>
                        <p class="card-text text-center"><strong>Հեղինակը:</strong> {{ book.author.firstName }} {{ book.author.lastName }}</p>
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('app_book_show', { 'id': book.id }) }}" class="btn btn-secondary">Ավելին</a>
                            <a href="" class="btn btn-success ml-3">Գնել Հիմա</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            {% else %}
                <p>No books found.</p>
            {% endfor %}
        </div>

        <div class="pagination mt-4">
            {{ knp_pagination_render(books) }}
        </div>
    </div>
{% endblock %}
