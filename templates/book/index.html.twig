{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
    <style>
        .card {
            margin: 15px;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .card-title {
            font-size: 1.25rem;
        }
        .pagination {
            justify-content: center;
        }
    </style>

    <div class="container mt-5">
        <h1>Books</h1>
        <div class="row">
            {% for book in books %}
                <div class="col-md-4">
                    <div class="card">
                        <h5 class="card-title">{{ book.title }}</h5>
                        <p class="card-text"><strong>Publication Year:</strong> {{ book.publicationYear }}</p>
                        <p class="card-text"><strong>Author:</strong> {{ book.author.firstName }} {{ book.author.lastName }}</p>
                        <a href="{{ path('app_book_show', { 'id': book.id }) }}" class="btn btn-primary">View</a>
                    </div>
                </div>
            {% else %}
                <p>No books found.</p>
            {% endfor %}
        </div>

        <div class="pagination mt-4">
            {{ knp_pagination_render(books) }}
        </div>
    </div>
{% endblock %}
