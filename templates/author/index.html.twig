{% extends 'base.html.twig' %}

{% block title %}Authors{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Authors</h1>

        <div class="row">
            {% for author in authors %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ author.firstName }} {{ author.lastName }}</h5>
                            <p class="card-text">Biography: {{ author.biography|slice(0, 110) ~ (author.biography|length > 100 ? ' . . . ' : '') }}</p>

                            <a href="{{ path('app_author_show', { id: author.id }) }}" class="btn btn-primary">View Author's Books</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning" role="alert">
                        No authors found.
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
