{% extends 'admin/base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Books</h1>

        <p>
            <a href="{{ path('app_admin_book_create') }}" class="btn btn-success">Create Book</a>
        </p>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Publication Year</th>
                <th>Author</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.id }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.description }}</td>
                    <td>{{ book.publicationYear }}</td>
                    <td>{{ book.author.firstName }} {{ book.author.lastName }}</td>
                    <td>
                        <a href="{{ path('app_admin_book_edit', {'id': book.id}) }}" class="btn btn-primary btn-sm">Edit</a>

                        <form action="{{ path('app_admin_book_delete', {'id': book.id}) }}" method="post" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this book?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                            <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No books found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
